PORT=3000
NODE_ENV=development

# Deployment Configuration
# Set to false for traditional servers (EC2, VPS, local development)
# Set to true for serverless platforms (Vercel, Netlify, AWS Lambda)
IS_SERVERLESS=false

# Database Configuration (PostgreSQL/Supabase)
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@YOUR_HOST:5432/YOUR_DATABASE"

# MongoDB Configuration (ESP32 Sensor Data)
MONGO_CONNECTION_STRING="mongodb+srv://YOUR_USER:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/?retryWrites=true&w=majority"
MONGO_DATABASE="dadosClima"
MONGO_COLLECTION="clima"

# Migration Configuration (MongoDB → PostgreSQL)
MIGRATION_ENABLED="true"                    # Habilita migração automática
MIGRATION_INTERVAL_MINUTES="15"            # Executa a cada X minutos (15 = a cada 15 minutos)
MIGRATION_BATCH_SIZE="100"                 # Processa 100 registros por lote
MIGRATION_SYNC_NAME="main_sync"            # Nome da sincronização (para múltiplos ambientes)
